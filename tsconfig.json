{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@layouts/*": ["src/layouts/*"],
            "@data/*": ["src/data/*"],
            "@utils": ["src/utils"],
            "@types/*": ["src/types/*"]
        }
    }
}
