---
import { info } from "@data/info.de";

import Layout from "@layouts/Layout.astro";
import Hero from "@components/Hero.astro";
import Experience from "@components/Experience.astro";
import "@styles/index.scss";
import Technology from "@components/Technology.astro";
---

<Layout>
  <Hero
    name={info.name}
    title="Web Entwickler"
    about={info.about}
    slug="Hallo 👋🏻 , Ich bin"
  />
  <Experience
    title="Berufserfahrung"
    experience={info.professionalExperience}
  />
  <Experience title="Bildung" experience={info.education} />
  <Experience
    title="Fähigkeiten und Zertifikate"
    experience={info.skillsAndCertificates}
  />
  <Technology title="Technologien" technologies={info.technologies} />
  <Technology title="Sprachen" technologies={info.languages} />
</Layout>
